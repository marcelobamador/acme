CREATE OR REPLACE PROCEDURE PROCEDURE_PAGAMENTO
  (ID IN NUMBER, STATUS IN VARCHAR2, NUM_CARTAO IN NUMBER, DATA_PAGAMENTO IN DATE, STATUS OUT VARCHAR2)
IS
PK NUMBER;
STATUS VARCHAR2;
NUM_CARTAO NUMBER;
DATA_PAGAMENTO DATE;
BEGIN
   UPDATE PAGAMENTO PGT 
   SET PGT.STATUS = :STATUS
   WHERE PGT.PK = ID;
END PROCEDURE_ATUALIZAR_PAGAMENTO;
